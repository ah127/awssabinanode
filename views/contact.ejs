</head>
<body>
    <%- include('includes/navigation.ejs') %> 
    <section class="pageHeader">
        <h1>Contact Us</h1>
    </section>
    <section class="contact_form" id="contact_form">
        <div class="contact_form_info">
          <h2>Send us a message</h2>
          <span>If you have any queries feel free to send us message anytime</span>
          <div class="social_icons">
           <span style="color:#3b5998">
             <i class="fab fa-facebook fa-2x"></i>
           </span>
           <span style="color: #00acee;">
             <i class="fab fa-twitter-square fa-2x"></i>
           </span>
           <span style="color: #0e76a8;">
             <i class="fab fa-linkedin fa-2x"></i>
           </span>
           <span style="color: #ff0000">
             <i class="fab fa-youtube-square fa-2x"></i>
           </span>
           </div>
           <address>
             Head Office<br>
             Kathmandu, Nepal<br>
             +977 9803796594
           </address>
        </div>
        <div class="form_feilds">
         <% if (errorMessage) { %>
           <div class="form-message"><%= errorMessage %> </div>
         <% } %>
         <form action="/contact" method="POST">
           <label for="fname">NAME <sup>*</sup></label>
           <input type="text" name="fname" id="fname" placeholder="Your Name" required>
           <label for="fname">EMAIL <sup>*</sup></label>
           <input type="email" name="email" id="email" placeholder="Email Address" required>
           <label for="message">MESSAGE</label>
           <textarea name="message" id="message" cols="30" rows="10" placeholder="Please add your message here"></textarea>
           <button type="submit">Send Message</button>
         </form>
        </div>
       </section>
    <%- include('includes/footer.ejs') %>
    <%- include('includes/end.ejs') %>